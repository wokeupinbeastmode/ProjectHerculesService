@{
    ViewData["Title"] = "User";
}

<h1>User in the System</h1>

<hr />

<a class="btn btn-info" asp-area="" asp-controller="User" asp-action="AddUserIndex">Add New User</a>
<hr />
<div class="row">
    <table class="table">
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Password</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
            </tr>
        }

    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
